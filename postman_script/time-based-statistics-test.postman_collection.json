  "item": [
    {
      "name": "1. Appointments by Time Tests",
      "item": [
        {
          "name": "Appointments by Time - Today",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has data array', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('data');",
                  "    pm.expect(jsonData.data).to.be.an('array');",
                  "});",
                  "",
                  "pm.test('Response has period info', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('period');",
                  "    pm.expect(jsonData.period).to.have.property('startDate');",
                  "    pm.expect(jsonData.period).to.have.property('endDate');",
                  "    pm.expect(jsonData.period).to.have.property('periodType');",
                  "});",
                  "",
                  "pm.test('Data items have required fields', function () {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data.length > 0) {",
                  "        const item = jsonData.data[0];",
                  "        pm.expect(item).to.have.property('date');",
                  "        pm.expect(item).to.have.property('total');",
                  "        pm.expect(item).to.have.property('completed');",
                  "        pm.expect(item).to.have.property('pending');",
                  "        pm.expect(item).to.have.property('cancelled');",
                  "        pm.expect(item).to.have.property('confirmed');",
                  "    }",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/statistics/appointments/by-time?period=day",
              "host": ["{{base_url}}"],
              "path": ["statistics", "appointments", "by-time"],
              "query": [
                {
                  "key": "period",
                  "value": "day"
