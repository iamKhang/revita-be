        {
          "name": "Get Specialties",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/appointment-booking/specialties",
              "host": ["{{baseUrl}}"],
              "path": ["appointment-booking", "specialties"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has specialties array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "    pm.expect(jsonData.length).to.be.greaterThan(0);",
                  "    ",
                  "    // Save first specialty ID for next requests",
                  "    if (jsonData.length > 0) {",
                  "        pm.collectionVariables.set('specialtyId', jsonData[0].id);",
                  "        console.log('Specialty ID:', jsonData[0].id);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
