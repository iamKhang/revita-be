        {
          "name": "Verify Slots After Booking",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/appointment-booking/doctors/{{doctorId}}/available-slots?serviceId={{serviceId}}&date={{appointmentDate}}",
              "host": ["{{baseUrl}}"],
              "path": ["appointment-booking", "doctors", "{{doctorId}}", "available-slots"],
              "query": [
                {
                  "key": "serviceId",
                  "value": "{{serviceId}}"
                },
                {
                  "key": "date",
                  "value": "{{appointmentDate}}"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Previously booked slot should be unavailable\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('slots');",
                  "    ",
                  "    var startTime = pm.collectionVariables.get('startTime');",
                  "    var bookedSlot = jsonData.slots.find(function(slot) {",
                  "        return slot.startTime === startTime;",
                  "    });",
                  "    ",
                  "    if (bookedSlot) {",
                  "        pm.expect(bookedSlot.isAvailable).to.be.false;",
                  "        console.log('Booked slot is now unavailable:', startTime);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
