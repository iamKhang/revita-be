        {
          "name": "Get Available Slots for Service and Date",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/appointment-booking/doctors/{{doctorId}}/available-slots?serviceId={{serviceId}}&date={{appointmentDate}}",
              "host": ["{{baseUrl}}"],
              "path": ["appointment-booking", "doctors", "{{doctorId}}", "available-slots"],
              "query": [
                {
                  "key": "serviceId",
                  "value": "{{serviceId}}"
                },
                {
                  "key": "date",
                  "value": "{{appointmentDate}}"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has slots array\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('slots');",
                  "    pm.expect(jsonData.slots).to.be.an('array');",
                  "    ",
                  "    // Find first available slot",
                  "    var availableSlots = jsonData.slots.filter(function(slot) {",
                  "        return slot.isAvailable === true;",
                  "    });",
                  "    ",
                  "    if (availableSlots.length > 0) {",
                  "        pm.collectionVariables.set('startTime', availableSlots[0].startTime);",
                  "        pm.collectionVariables.set('endTime', availableSlots[0].endTime);",
                  "        console.log('Available slot:', availableSlots[0].startTime, '-', availableSlots[0].endTime);",
                  "    } else {",
                  "        console.log('No available slots found');",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
