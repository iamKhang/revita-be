{
  "info": {
    "name": "AI Chatbot Test Collection",
    "description": "Collection để test AI Chatbot API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "jwtToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login to get JWT Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.access_token) {",
                  "        pm.collectionVariables.set('jwtToken', response.access_token);",
                  "        console.log('JWT Token saved:', response.access_token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@revita.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "AI Chatbot Endpoints",
      "item": [
        {
          "name": "Chat with AI - General Question",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has required fields', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('response');",
                  "    pm.expect(response).to.have.property('conversationId');",
                  "    pm.expect(response).to.have.property('timestamp');",
                  "    pm.expect(response).to.have.property('isMedicalAdvice');",
                  "});",
                  "",
                  "pm.test('Response is in Vietnamese', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.response).to.be.a('string');",
                  "    pm.expect(response.response.length).to.be.greaterThan(0);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Tôi bị đau đầu, nên làm gì?\",\n  \"conversationId\": \"test_conv_001\",\n  \"userId\": \"test_user_001\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/ai-chatbot/chat",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ai-chatbot", "chat"]
            }
          }
        },
        {
          "name": "Chat with AI - Cold Symptoms",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains medical advice', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.isMedicalAdvice).to.be.true;",
                  "    pm.expect(response).to.have.property('disclaimer');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwtToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Tôi bị cảm lạnh, ho và sổ mũi. Có nên uống thuốc gì không?\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/ai-chatbot/chat",
              "host": ["{{baseUrl}}"],
              "path": ["api", "ai-chatbot", "chat"]
            }
          }
        },
        {
          "name": "Chat with AI - Nutrition Question",
